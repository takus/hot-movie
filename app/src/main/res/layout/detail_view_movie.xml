<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/detail_title"
        android:text="Star Wars: The Force Awakens" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-12-18"
        android:id="@+id/detail_date"
        android:layout_below="@+id/detail_title"
        android:layout_alignRight="@+id/detail_overview"
        android:layout_alignEnd="@+id/detail_overview"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_poster"
        android:src="@android:drawable/ic_menu_search"
        android:layout_below="@+id/detail_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thirty years after defeating the Galactic Empire, Han Solo and his allies face a new threat from the evil Kylo Ren and his army of Stormtroopers."
        android:id="@+id/detail_overview"
        android:layout_alignTop="@+id/detail_poster"
        android:layout_toRightOf="@+id/detail_poster"
        android:layout_toEndOf="@+id/detail_poster"
        android:paddingLeft="4dp" />

</RelativeLayout>
